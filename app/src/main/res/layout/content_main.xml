<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/connect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CONNECT" />

        <Button
            android:id="@+id/generateAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GENERATEACCOUNT" />

        <Button
            android:id="@+id/getAccount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GETACCOUNT" />

        <Button
            android:id="@+id/paymentsheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PAYMENTSHEET" />

        <Button
            android:id="@+id/sendSmartContract"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="sendSmartContract" />

        <Button
            android:id="@+id/webViewInit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="webview init" />

        <com.samsung.android.sdk.blockchain.ui.CucumberWebView
            android:id="@+id/cucumberWebview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>